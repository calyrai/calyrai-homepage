body {
  font-family: system-ui, sans-serif;
  margin: 0;
  padding: 0.5rem;
  background: #000;
  color: #e0e0e0;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 0.5rem;
}

#controls {
  font-size: 0.8rem;
  display: flex;
  gap: 1rem;
  align-items: center;
  color: #ddd;
}

#controls span.label {
  margin-right: 0.2rem;
}

#controls input[type="range"] {
  width: 120px;
  -webkit-appearance: none;
  background: transparent;
}

#controls input[type="range"]::-webkit-slider-runnable-track {
  height: 4px;
  border-radius: 2px;
  background: #333;
}

#controls input[type="range"]::-webkit-slider-thumb {
  -webkit-appearance: none;
  width: 12px;
  height: 12px;
  border-radius: 50%;
  background: #ffffff;
  border: 1px solid #000;
  margin-top: -4px;
}

#plots {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: flex-start;
  gap: 0.5rem;
  width: 100%;
  max-width: 1350px;
}

.plot-column {
  flex: 1 1 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 0.25rem;
}

.plot-label {
  font-size: 0.75rem;
  color: #ccc;
}

canvas {
  border: 1px solid #444;
  background: #05070b;
  border-radius: 6px;
}

/* PDB drop zone / viewer */
#pdbDropZone {
  position: relative;
  width: 420px;
  height: 320px;
  border-radius: 6px;
  border: 1px solid #444;
  background: radial-gradient(circle at top, #111 0, #000 60%);
  overflow: hidden;
}

#pdbViewer {
  width: 100%;
  height: 100%;
}

/* hint text overlay */
#pdbHint {
  position: absolute;
  inset: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  font-size: 0.75rem;
  color: #aaa;
  pointer-events: none;
  background: radial-gradient(circle at center, rgba(255,255,255,0.02), transparent 60%);
}

/* drag-over highlighting for canvases and drop zone */
.dragover {
  border-color: #24f3ff !important;
  box-shadow: 0 0 12px rgba(36, 243, 255, 0.7);
}

/* ===== Calyrai PDB sphere viewer ===== */
#pdbPane {
  width: 100%;
  max-width: 1200px;
  margin: 0.5rem auto 0;
  display: flex;
  flex-direction: column;
  gap: 0.25rem;
}

#pdbHeader {
  font-size: 0.8rem;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #b0faff;
}

#pdbHeader .hint {
  font-size: 0.75rem;
  color: #aaaaaa;
}

#pdbViewer {
  width: 100%;
  height: 340px;
  border: 1px solid #333;
  border-radius: 6px;
  background: #000000;
}

#pdbViewer.dragover {
  outline: 1px dashed #ff00ff;
  box-shadow: 0 0 12px rgba(255,0,255,0.7);
}
