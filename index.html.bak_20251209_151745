<script>
async function markAndLogVisitor() {
  try {
    // 1) Get approximate geolocation from IP
    const geo = await fetch("https://ipapi.co/json/").then(r => r.json());

    if (!geo || !geo.latitude || !geo.longitude) return;

    const lat = geo.latitude;
    const lng = geo.longitude;
    const city = geo.city || null;
    const country = geo.country_name || null;
    const ip = geo.ip || null; // optional – can be omitted for privacy
    const timestamp = new Date().toISOString();

    // 2) Show marker on the globe (visual only)
    if (window.addVisitorMarker) {
      window.addVisitorMarker({ lat, lng });
    }

    // 3) Send visit to your logging backend (persistent storage)
    const payload = {
      lat,
      lng,
      city,
      country,
      timestamp,
      ip // you can remove this field if you don't want to store IPs
    };

    await fetch("https://YOUR-BACKEND-DOMAIN.example.com/log-visit", {
      method: "POST",
      headers: {
        "Content-Type": "application/json"
      },
      body: JSON.stringify(payload)
    });
  } catch (err) {
    console.warn("Visitor geolocation or logging failed:", err);
  }
}

document.addEventListener("DOMContentLoaded", markAndLogVisitor);
</script>
